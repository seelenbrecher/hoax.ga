<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/splashImageView"
        android:src="@drawable/logo"
        android:layout_above="@+id/usernameLinearLayout"
        android:layout_centerHorizontal="true"
        android:layout_width="160sp"
        android:layout_height="140sp"/>

    <LinearLayout
        android:id="@+id/usernameLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/passwordLinearLayout"
        android:orientation="horizontal"
        android:layout_marginTop="30sp">

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/user_login"
            android:tint="@color/cpb_white"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"/>

        <EditText
            android:id="@+id/userNameEditText"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:textColor="#ffebee"
            android:textColorHint="#ffebee"
            android:ems="10"
            android:maxLines="1"
            android:textSize="15sp"
            android:lines="1"
            android:singleLine="true" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/passwordLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/password_login"
            android:tint="@color/cpb_white"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"/>

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColor="#ffebee"
            android:textColorHint="#ffebee"
            android:inputType="textPassword"
            android:ems="10"
            android:maxLines="1"
            android:textSize="15sp"
            android:lines="1"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/emailLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordLinearLayout"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/email_register"
            android:tint="@color/cpb_white"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"/>

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="#ffebee"
            android:textColorHint="#ffebee"
            android:ems="10"
            android:maxLines="1"
            android:textSize="15sp"
            android:lines="1"
            android:singleLine="true" />

    </LinearLayout>

    <com.dd.CircularProgressButton
        android:id="@+id/registerButton"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:cpb_cornerRadius="8dp"
        app:cpb_textComplete="Complete"
        app:cpb_textError="Error"
        app:cpb_textIdle="Register"
        android:layout_below="@+id/emailLinearLayout"
        android:layout_centerHorizontal="true"
        app:cpb_selectorIdle="@drawable/login_button"/>

</RelativeLayout>