<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/changeProfilePicture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="5dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="10"
                app:civ_shadow_color="@color/colorAccent"
                android:src="@drawable/default_profpic"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="30sp"
                android:layout_below="@+id/changeProfilePicture">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/first_name_logo"
                        android:tint="@color/cpb_white"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="5sp"/>

                    <EditText
                        android:id="@+id/changeFirstNameEditText"
                        android:layout_width="250sp"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:textColor="#ffebee"
                        android:textColorHint="#ffebee"
                        android:ems="10"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:lines="1"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/last_name_logo"
                        android:tint="@color/cpb_white"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="5sp"/>

                    <EditText
                        android:id="@+id/changeLastNameEditText"
                        android:layout_width="250sp"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:textColor="#ffebee"
                        android:textColorHint="#ffebee"
                        android:ems="10"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:lines="1"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/password_login"
                        android:tint="@color/cpb_white"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="5sp"/>

                    <EditText
                        android:id="@+id/oldPasswordEditText"
                        android:layout_width="250sp"
                        android:layout_height="wrap_content"
                        android:hint="Old Password"
                        android:textColor="#ffebee"
                        android:textColorHint="#ffebee"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:maxLines="1"
                        android:textSize="15sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/password_login"
                        android:tint="@color/cpb_white"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="5sp"/>

                    <EditText
                        android:id="@+id/newPasswordEditText"
                        android:layout_width="250sp"
                        android:layout_height="wrap_content"
                        android:hint="New Password"
                        android:textColor="#ffebee"
                        android:textColorHint="#ffebee"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:maxLines="1"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/briefcase_logo"
                        android:tint="@color/cpb_white"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="5sp"/>

                    <EditText
                        android:id="@+id/changeJobEditText"
                        android:layout_width="250sp"
                        android:layout_height="wrap_content"
                        android:hint="Job"
                        android:textColor="#ffebee"
                        android:textColorHint="#ffebee"
                        android:ems="10"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:lines="1"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/quote_logo"
                        android:tint="@color/cpb_white"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="5sp"/>

                    <EditText
                        android:id="@+id/changeQuoteEditText"
                        android:layout_width="250sp"
                        android:layout_height="wrap_content"
                        android:hint="Quotes"
                        android:textColor="#ffebee"
                        android:textColorHint="#ffebee"
                        android:ems="10"
                        android:inputType="textCapSentences|textMultiLine"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <com.dd.CircularProgressButton
                    android:id="@+id/saveChangesButton"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:cpb_cornerRadius="8dp"
                    app:cpb_textComplete="Complete"
                    app:cpb_textError="Error"
                    app:cpb_textIdle="Save"
                    app:cpb_selectorIdle="@drawable/login_button"
                    android:layout_marginLeft="110dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>