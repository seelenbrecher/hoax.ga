<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/decentBannerText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Are you sure it is a fact?"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:paddingTop="35sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/decentBannerText1"
        android:textAlignment="center"
        android:padding="20sp"
        android:paddingLeft="35sp"
        android:paddingRight="35sp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="do you find it hard to judge\n whether a news is fact or not?"/>
</LinearLayout>