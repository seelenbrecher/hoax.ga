<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/newPostProgress"
        android:layout_width="175dp"
        android:layout_height="175dp"
        app:cpb_background_progressbar_color="@color/colorAccent"
        app:cpb_background_progressbar_width="5dp"
        app:cpb_progressbar_color="@color/colorAccent"
        app:cpb_progressbar_width="15dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/dummyLayout"
        android:layout_marginBottom="30dp"
        android:background="@drawable/logo_trans"/>

    <TextView
        android:id="@+id/dummyLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

    </TextView>
    <TextView
        android:id="@+id/newPostProgressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Determining the result\n Please wait..."
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dummyLayout"
        android:textColor="@color/white"
        android:textSize="20dp"/>
</RelativeLayout>