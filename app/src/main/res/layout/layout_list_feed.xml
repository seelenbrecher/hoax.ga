<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/postInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imagePostStarter"
            android:layout_width="5sp"
            android:layout_height="5sp"
            android:src="@drawable/user_login_24"
            />

        <TextView
            android:id="@+id/titlePost"
            android:layout_width="15sp"
            android:layout_height="10sp"
            android:text="ini judul!"
            />
        <TextView
            android:id="@+id/postStarter"
            android:layout_width="7sp"
            android:layout_height="10sp"
            />
        <TextView
            android:id="@+id/datePosted"
            android:layout_width="7sp"
            android:layout_height="10sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/postContentLayout"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/postImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/postContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/postDetail"
            android:layout_width="10sp"
            android:layout_height="match_parent"
            android:text="DETAILS"
            />

        <TextView
            android:id="@+id/postResult"
            android:layout_width="10sp"
            android:layout_height="match_parent"
            android:text="HOAX"/>

    </LinearLayout>

</LinearLayout>